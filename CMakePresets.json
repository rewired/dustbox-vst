{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-msvc-debug",
      "displayName": "Windows MSVC Debug",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/windows-msvc-debug",
      "description": "Generate Visual Studio solutions. Build then run the INSTALL target to deploy into _deploy/VST3.",
      "cacheVariables": {
        "DUSTBOX_ENABLE_WARNINGS": "ON",
        "DUSTBOX_STRICT_BUILD": "OFF"
      }
    },
    {
      "name": "windows-msvc-release",
      "displayName": "Windows MSVC Release",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/windows-msvc-release",
      "description": "Release-oriented Visual Studio generator. Use --target INSTALL for deployment.",
      "cacheVariables": {
        "DUSTBOX_ENABLE_WARNINGS": "ON",
        "DUSTBOX_STRICT_BUILD": "OFF"
      }
    },
    {
      "name": "ninja-release",
      "displayName": "Ninja Release (MSVC)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/ninja-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe",
        "DUSTBOX_ENABLE_WARNINGS": "ON",
        "DUSTBOX_STRICT_BUILD": "OFF"
      }
    },
    {
      "name": "macos-xcode-debug",
      "displayName": "macOS Xcode Debug",
      "generator": "Xcode",
      "binaryDir": "${sourceDir}/build/macos-xcode-debug",
      "description": "macOS Xcode (Debug). Build the INSTALL target to populate _deploy/VST3.",
      "cacheVariables": {
        "DUSTBOX_ENABLE_WARNINGS": "ON",
        "DUSTBOX_STRICT_BUILD": "OFF"
      }
    },
    {
      "name": "macos-xcode-release",
      "displayName": "macOS Xcode Release",
      "generator": "Xcode",
      "binaryDir": "${sourceDir}/build/macos-xcode-release",
      "description": "macOS Xcode (Release). Use INSTALL target for deployment.",
      "cacheVariables": {
        "DUSTBOX_ENABLE_WARNINGS": "ON",
        "DUSTBOX_STRICT_BUILD": "OFF"
      }
    },
    {
      "name": "ci-strict",
      "displayName": "CI Strict Build",
      "inherits": ["windows-msvc-release"],
      "cacheVariables": {
        "DUSTBOX_STRICT_BUILD": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-msvc-debug",
      "configurePreset": "windows-msvc-debug",
      "configuration": "Debug",
      "description": "Build Dustbox (Debug). Run again with --target INSTALL to deploy."
    },
    {
      "name": "windows-msvc-release",
      "configurePreset": "windows-msvc-release",
      "configuration": "Release",
      "description": "Build Dustbox (Release). Combine with --target INSTALL for deployment."
    },
    {
      "name": "ninja-release",
      "configurePreset": "ninja-release"
    },
    {
      "name": "macos-xcode-debug",
      "configurePreset": "macos-xcode-debug",
      "configuration": "Debug"
    },
    {
      "name": "macos-xcode-release",
      "configurePreset": "macos-xcode-release",
      "configuration": "Release"
    },
    {
      "name": "ci-strict",
      "configurePreset": "ci-strict"
    }
  ],
  "workflowPresets": [
    {
      "name": "windows-msvc-debug-install",
      "displayName": "Windows MSVC Debug (configure, build, install)",
      "steps": [
        {
          "type": "configure",
          "name": "windows-msvc-debug"
        },
        {
          "type": "build",
          "name": "windows-msvc-debug",
          "configuration": "Debug",
          "targets": [
            "INSTALL"
          ]
        }
      ]
    },
    {
      "name": "windows-msvc-release-install",
      "displayName": "Windows MSVC Release (configure, build, install)",
      "steps": [
        {
          "type": "configure",
          "name": "windows-msvc-release"
        },
        {
          "type": "build",
          "name": "windows-msvc-release",
          "configuration": "Release",
          "targets": [
            "INSTALL"
          ]
        }
      ]
    }
  ]
}
